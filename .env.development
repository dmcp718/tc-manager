# Development Environment Configuration
# This file is committed to version control for consistent dev environment

NODE_ENV=development

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=sitecache_db
DB_USER=sitecache_user
POSTGRES_PASSWORD=sitecache_password

# LucidLink Configuration (development values)
INDEX_ROOT_PATH=/media/lucidlink-1
ALLOWED_PATHS=/media/lucidlink-1
LUCIDLINK_MOUNT_POINT=/media/lucidlink-1
LUCIDLINK_COMMAND=/usr/local/bin/lucid
LUCIDLINK_FS_1_PORT=7778
ENABLE_LUCIDLINK_STATS=true
LUCIDLINK_API_HOST=host.docker.internal

# Development-specific settings
LUCIDLINK_FILESPACE=
LUCIDLINK_USER=
LUCIDLINK_PASSWORD=

# Network Configuration
NETWORK_INTERFACE=eth0
ENABLE_NETWORK_STATS=false

# Performance Settings (lighter for development)
CACHE_WORKER_COUNT=1
MAX_CONCURRENT_FILES=3
WORKER_POLL_INTERVAL=3000
UV_THREADPOOL_SIZE=8

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=sitecache-files-dev

# Authentication (development - insecure but convenient)
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRY=24h
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Frontend Configuration (development)
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_WS_URL=ws://localhost:3002
REACT_APP_LUCIDLINK_MOUNT_POINT=/media/lucidlink-1

# Varnish Stats
VARNISH_STATS_INTERVAL=60000
VARNISH_CONTAINER_NAME=sitecache-varnish-1

# Development-specific React settings
CHOKIDAR_USEPOLLING=true
FAST_REFRESH=true
GENERATE_SOURCEMAP=true