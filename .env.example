# SiteCache Browser Environment Configuration Template
# Copy this file to .env and update with your values
#
# Quick start:
# cp .env.example .env
# 
# Then update the authentication and LucidLink credentials below

# Database Configuration
POSTGRES_PASSWORD=changeme_strong_password_here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=sitecache_db
DB_USER=sitecache_user

# Application Configuration
NODE_ENV=development
PORT=3001
WEBSOCKET_PORT=3002

# LucidLink Configuration
INDEX_ROOT_PATH=/media/lucidlink-1
ALLOWED_PATHS=/media/lucidlink-1
LUCIDLINK_API_HOST=host.docker.internal

# LucidLink Authentication (Required for container mounting)
LUCIDLINK_USER=your-email@domain.com
LUCIDLINK_PASSWORD=your-secure-password
LUCIDLINK_FILESPACE=your-filespace.domain
LUCIDLINK_MOUNT_POINT=/media/lucidlink-1

# Note: LucidLink API port is automatically discovered at runtime via `lucid list`

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=8h
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Performance Configuration
CACHE_WORKER_COUNT=2
MAX_CONCURRENT_FILES=5
WORKER_POLL_INTERVAL=2000
SHUTDOWN_TIMEOUT=10000

# LucidLink Command Configuration
LUCIDLINK_COMMAND=/usr/local/bin/lucid

# Stats and Monitoring Configuration
ENABLE_LUCIDLINK_STATS=true
LUCIDLINK_STATS_INTERVAL=1000
ENABLE_VARNISH_STATS=false
VARNISH_CONTAINER_NAME=sitecache-varnish-1
VARNISH_STATS_INTERVAL=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/app/logs
LOG_CONSOLE=true
LOG_FILE=true
LOG_ROTATION=true

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=sitecache-files

# Frontend Configuration
# For Docker development, use your Docker host IP (find with: docker network inspect bridge | grep Gateway)
# Common values: 192.168.8.28, 172.17.0.1, or your actual machine IP
REACT_APP_API_URL=http://YOUR_DOCKER_HOST_IP:3001/api
REACT_APP_WS_URL=ws://YOUR_DOCKER_HOST_IP:3002

