# SiteCache Browser Production Environment Configuration
# Copy this file to .env and update with your production values

# Database Configuration (use strong passwords!)
POSTGRES_PASSWORD=your_very_strong_password_here
DB_HOST=localhost  # Using host network mode
DB_PORT=5432
DB_NAME=sitecache_db
DB_USER=sitecache_user

# Application Configuration
NODE_ENV=production
PORT=3001
WEBSOCKET_PORT=3002

# LucidLink Configuration
LUCIDLINK_MOUNT=/mnt/lucidlink
INDEX_ROOT_PATH=/mnt/lucidlink
ALLOWED_PATHS=/mnt/lucidlink
LUCIDLINK_FS_1=lucidlink
LUCIDLINK_FS_1_PORT=9782
LUCIDLINK_API_HOST=127.0.0.1  # Direct access in host network mode

# Network Configuration (check with: ip addr)
NETWORK_INTERFACE=eth0

# Frontend Configuration
REACT_APP_API_URL=https://your-domain.com
REACT_APP_WS_URL=wss://your-domain.com

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem
DOMAIN_NAME=your-domain.com

# Performance Tuning
MAX_CONCURRENT_INDEXING=5
CACHE_WORKER_COUNT=4
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT=10000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/var/log/sitecache-browser

# Monitoring
# Metrics removed - this is a management tool, not a production service