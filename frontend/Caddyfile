# Caddyfile for SC-Manager Frontend
{
    # Global options
    auto_https off
    admin off
}

# HTTP site (for development/testing with existing certs)
:80 {
    # API routes - highest priority
    route /api/* {
        reverse_proxy backend:3001
    }
    
    # WebSocket routes
    route /ws {
        reverse_proxy backend:3002
    }
    
    # Static files and SPA fallback
    route {
        root * /usr/share/caddy
        try_files {path} /index.html
        file_server
    }
}

# HTTPS site (when SSL certs are available)
:443 {
    # Use existing certificates
    tls /etc/ssl/certs/sc-mgr.crt /etc/ssl/certs/sc-mgr.key
    
    # API routes - highest priority
    route /api/* {
        reverse_proxy backend:3001
    }
    
    # WebSocket routes
    route /ws {
        reverse_proxy backend:3002
    }
    
    # Static files and SPA fallback
    route {
        root * /usr/share/caddy
        try_files {path} /index.html
        file_server
    }
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}