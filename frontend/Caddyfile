# Caddyfile for SC-Manager Frontend
{
    # Global options
    admin off
    
    # Caddy automatically enables HTTPS by default
    # - For domains: automatic Let's Encrypt
    # - For IPs: automatic self-signed certificates
    # To disable: use 'auto_https off'
    
    # Accept self-signed certs for backend communication
    servers {
        trusted_proxies static private_ranges
    }
}

# Main site configuration - handles both HTTP and HTTPS
https://192.168.8.28 {
    # TLS configuration - Caddy will auto-generate certificates
    # For IP addresses, this will create a self-signed certificate
    tls
    
    # API routes - highest priority
    route /api/* {
        reverse_proxy backend:3001 {
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
            header_up X-Real-IP {remote}
        }
    }
    
    # WebSocket routes
    route /ws {
        reverse_proxy backend:3002 {
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
            header_up X-Real-IP {remote}
        }
    }
    
    # Static files and SPA fallback
    route {
        root * /usr/share/caddy
        try_files {path} /index.html
        file_server
    }
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        # Allow WebSocket connections
        Content-Security-Policy "default-src 'self' https: wss: data: blob: 'unsafe-inline' 'unsafe-eval'"
    }
    
    # Enable compression
    encode gzip
}