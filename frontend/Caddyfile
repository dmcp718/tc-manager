# Caddyfile for TeamCache Manager Frontend
{
    # Global options
    admin off
    
    # Caddy automatically enables HTTPS by default
    # - Public domains: automatic Let's Encrypt certificates
    # - Private/local domains (*.local, *.internal): automatic self-signed certificates
    # - IP addresses: automatic self-signed certificates
    # - Local DNS records: works with any hostname configured in DNS
    
    # Accept self-signed certs for backend communication
    servers {
        trusted_proxies static private_ranges
    }
}

# Main site configuration - handles both HTTP and HTTPS
{$SERVER_HOST:localhost} {
    # TLS configuration - Caddy will auto-generate certificates
    # For IP addresses and private domains: self-signed certificates
    # For public domains: Let's Encrypt certificates (automatic)
    # Caddy automatically detects and uses appropriate certificate type
    
    # API routes - highest priority
    route /api/* {
        reverse_proxy backend:3001 {
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
            header_up X-Real-IP {remote}
        }
    }
    
    # WebSocket routes
    route /ws {
        reverse_proxy backend:3002 {
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
            header_up X-Real-IP {remote}
        }
    }
    
    # Static files and SPA fallback
    route {
        root * /usr/share/caddy
        try_files {path} /index.html
        file_server
    }
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        # Allow WebSocket connections
        Content-Security-Policy "default-src 'self' https: wss: data: blob: 'unsafe-inline' 'unsafe-eval'"
    }
    
    # Enable compression
    encode gzip
}