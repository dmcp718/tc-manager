# API Gateway Configuration
API_GATEWAY_PORT=8095
API_GATEWAY_KEY=your-secure-api-key-here

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=teamcache_db
DB_USER=teamcache_user
DB_PASSWORD=teamcache_password

# Backend WebSocket URL (for LucidLink stats)
BACKEND_WS_URL=ws://backend:3002

# S3 Health Monitoring Configuration
# Set S3_HEALTH_BUCKET to enable S3 health monitoring
S3_HEALTH_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1
S3_CHECK_INTERVAL=5000  # Milliseconds between health checks (default: 5000ms/5 seconds)

# AWS Credentials (optional - will use IAM role if not specified)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key